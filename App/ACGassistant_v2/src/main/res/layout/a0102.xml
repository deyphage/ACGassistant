<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".A0102">

    <Button
        android:id="@+id/a0102_btn01"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/a0102_txt01"
        android:layout_toStartOf="@+id/a0102_btn02"
        android:text="@string/a0102_btn01"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/a0102_btn02"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@id/a0102_txt01"
        android:layout_alignParentEnd="true"
        android:text="@string/a0102_btn02"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/a0102_txt01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/a0102_txt01"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/a0102_txt01"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/a0102_imgV05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/eximg1" />

            <TextView
                android:id="@+id/a0102_txt02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/a0102_txt03"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/Silver"
                android:theme="@style/Base.Theme.AppCompat.Dialog.MinWidth">

                <TextView
                    android:id="@+id/a0102_txt04"
                    android:layout_width="150dp"
                    android:layout_height="40dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/a0102_txt04"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/a0102_btn03"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_toEndOf="@+id/a0102_txt04"
                    android:text="@string/a0102_btn03"
                    android:textSize="14sp" />
                /*避免彈出輸入法*/
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px"/>
                /*避免彈出輸入法*/

                <EditText
                    android:id="@+id/a0102_etxt01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a0102_txt04"
                    android:layout_alignParentStart="true"
                    android:text="@string/a0102_etxt01" />

                <ImageView
                    android:id="@+id/a0102_imgV06"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/a0102_etxt01"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/a0102_txt05"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/a0102_imgV06"
                    android:text="@string/a0102_txt05" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>