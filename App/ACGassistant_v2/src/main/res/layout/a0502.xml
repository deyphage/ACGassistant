<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".A0502">


    <TableRow
        android:id="@+id/a0502_TR01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <TextView
            android:id="@+id/a0502_txt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a0502_txt02"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/a0502_etxt01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/White"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="18sp"></EditText>
    </TableRow>


    <TableRow
        android:id="@+id/a0502_TR02"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="58dp">

        <TextView
            android:id="@+id/a0502_txt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/a0502_TR02"
            android:layout_alignBottom="@+id/a0502_TR02"
            android:text="@string/a0502_txt03"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/a0502_etxt02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/White"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="18sp"></EditText>
    </TableRow>

    <Button
        android:id="@+id/a0502_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="169dp"
        android:text="@string/a0502_btn01"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/a0502_btn02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="95dp"
        android:text="@string/a0502_btn02" />


</RelativeLayout>